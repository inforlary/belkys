import { useEffect, useState } from 'react';
import { supabase } from '../lib/supabase';
import { useAuth } from '../contexts/AuthContext';
import { Card, CardBody, CardHeader } from '../components/ui/Card';
import Button from '../components/ui/Button';
import Modal from '../components/ui/Modal';
import { Plus, Edit2, Trash2, Search, TrendingUp } from 'lucide-react';

interface Indicator {
  id: string;
  goal_id: string;
  name: string;
  unit: string;
  baseline_value: number;
  target_value: number;
  target_year: number;
  current_value: number;
  measurement_frequency: string;
  goal?: {
    title: string;
    code: string;
  };
}

interface Goal {
  id: string;
  code: string;
  title: string;
}

export default function Indicators() {
  const { profile } = useAuth();
  const [indicators, setIndicators] = useState<Indicator[]>([]);
  const [goals, setGoals] = useState<Goal[]>([]);
  const [loading, setLoading] = useState(true);
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [editingIndicator, setEditingIndicator] = useState<Indicator | null>(null);
  const [searchTerm, setSearchTerm] = useState('');
  const [formData, setFormData] = useState({
    goal_id: '',
    name: '',
    unit: '',
    baseline_value: 0,
    target_value: 0,
    target_year: new Date().getFullYear(),
    current_value: 0,
    measurement_frequency: 'yearly',
  });
  const [submitting, setSubmitting] = useState(false);

  useEffect(() => {
    loadData();
  }, [profile]);

  const loadData = async () => {
    if (!profile?.organization_id) return;

    try {
      const [indicatorsRes, goalsRes] = await Promise.all([
        supabase
          .from('indicators')
          .select(`
            *,
            goals!inner(title, code)
          `)
          .eq('organization_id', profile.organization_id)
          .order('created_at', { ascending: false }),
        supabase
          .from('goals')
          .select('id, code, title')
          .eq('organization_id', profile.organization_id)
          .order('order_number', { ascending: true }),
      ]);

      if (indicatorsRes.error) throw indicatorsRes.error;
      if (goalsRes.error) throw goalsRes.error;

      setIndicators(indicatorsRes.data?.map(ind => ({
        ...ind,
        goal: ind.goals
      })) || []);
      setGoals(goalsRes.data || []);
    } catch (error) {
      console.error('Veriler yüklenirken hata:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!profile?.organization_id) return;

    setSubmitting(true);

    try {
      if (editingIndicator) {
        const { error } = await supabase
          .from('indicators')
          .update(formData)
          .eq('id', editingIndicator.id);

        if (error) throw error;
      } else {
        const { error } = await supabase
          .from('indicators')
          .insert({
            ...formData,
            organization_id: profile.organization_id,
          });

        if (error) throw error;
      }

      await loadData();
      handleCloseModal();
    } catch (error) {
      console.error('Gösterge kaydedilirken hata:', error);
      alert('Gösterge kaydedilirken bir hata oluştu');
    } finally {
      setSubmitting(false);
    }
  };

  const handleDelete = async (id: string) => {
    if (!confirm('Bu göstergeyi silmek istediğinizden emin misiniz?')) {
      return;
    }

    try {
      const { error } = await supabase
        .from('indicators')
        .delete()
        .eq('id', id);

      if (error) throw error;
      await loadData();
    } catch (error) {
      console.error('Gösterge silinirken hata:', error);
      alert('Gösterge silinirken bir hata oluştu');
    }
  };

  const handleEdit = (indicator: Indicator) => {
    setEditingIndicator(indicator);
    setFormData({
      goal_id: indicator.goal_id,
      name: indicator.name,
      unit: indicator.unit,
      baseline_value: indicator.baseline_value,
      target_value: indicator.target_value,
      target_year: indicator.target_year,
      current_value: indicator.current_value,
      measurement_frequency: indicator.measurement_frequency,
    });
    setIsModalOpen(true);
  };

  const handleCloseModal = () => {
    setIsModalOpen(false);
    setEditingIndicator(null);
    setFormData({
      goal_id: '',
      name: '',
      unit: '',
      baseline_value: 0,
      target_value: 0,
      target_year: new Date().getFullYear(),
      current_value: 0,
      measurement_frequency: 'yearly',
    });
  };

  const filteredIndicators = indicators.filter(ind =>
    ind.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
    ind.unit.toLowerCase().includes(searchTerm.toLowerCase())
  );

  const calculateProgress = (current: number, baseline: number, target: number) => {
    if (target === baseline) return 0;
    const progress = ((current - baseline) / (target - baseline)) * 100;
    return Math.max(0, Math.min(100, progress));
  };

  const getProgressColor = (progress: number) => {
    if (progress >= 75) return 'bg-green-500';
    if (progress >= 50) return 'bg-yellow-500';
    if (progress >= 25) return 'bg-orange-500';
    return 'bg-red-500';
  };

  if (loading) {
    return (
      <div className="flex items-center justify-center h-96">
        <div className="text-slate-500">Yükleniyor...</div>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold text-slate-900">Performans Göstergeleri</h1>
          <p className="text-slate-600 mt-1">Hedeflere bağlı performans göstergelerini yönetin</p>
        </div>
        <Button onClick={() => setIsModalOpen(true)} disabled={goals.length === 0}>
          <Plus className="w-4 h-4 mr-2" />
          Yeni Gösterge
        </Button>
      </div>

      {goals.length === 0 && (
        <Card>
          <CardBody>
            <p className="text-center text-slate-500">
              Gösterge eklemek için önce bir hedef oluşturmalısınız.
            </p>
          </CardBody>
        </Card>
      )}

      {goals.length > 0 && (
        <Card>
          <CardHeader>
            <div className="flex items-center space-x-4">
              <div className="flex-1 relative">
                <Search className="w-5 h-5 absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400" />
                <input
                  type="text"
                  placeholder="Gösterge ara..."
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                  className="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>
            </div>
          </CardHeader>

          <CardBody className="p-0">
            {filteredIndicators.length === 0 ? (
              <div className="text-center py-12">
                <p className="text-slate-500">Henüz gösterge bulunmuyor</p>
              </div>
            ) : (
              <div className="overflow-x-auto">
                <table className="w-full">
                  <thead className="bg-slate-50 border-b border-slate-200">
                    <tr>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        Gösterge Adı
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        Bağlı Hedef
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        Başlangıç
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        Hedef
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        Güncel
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                        İlerleme
                      </th>
                      <th className="px-6 py-3 text-right text-xs font-medium text-slate-700 uppercase tracking-wider">
                        İşlemler
                      </th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-slate-200">
                    {filteredIndicators.map((indicator) => {
                      const progress = calculateProgress(
                        indicator.current_value,
                        indicator.baseline_value,
                        indicator.target_value
                      );
                      return (
                        <tr key={indicator.id} className="hover:bg-slate-50 transition-colors">
                          <td className="px-6 py-4">
                            <div className="text-sm font-medium text-slate-900">{indicator.name}</div>
                            <div className="text-xs text-slate-500">{indicator.unit}</div>
                          </td>
                          <td className="px-6 py-4">
                            <div className="text-sm text-slate-600">
                              {indicator.goal?.code} - {indicator.goal?.title}
                            </div>
                          </td>
                          <td className="px-6 py-4 whitespace-nowrap">
                            <div className="text-sm text-slate-600">
                              {indicator.baseline_value} {indicator.unit}
                            </div>
                          </td>
                          <td className="px-6 py-4 whitespace-nowrap">
                            <div className="text-sm text-slate-600">
                              {indicator.target_value} {indicator.unit}
                            </div>
                            <div className="text-xs text-slate-500">({indicator.target_year})</div>
                          </td>
                          <td className="px-6 py-4 whitespace-nowrap">
                            <div className="text-sm font-medium text-slate-900">
                              {indicator.current_value} {indicator.unit}
                            </div>
                          </td>
                          <td className="px-6 py-4">
                            <div className="flex items-center space-x-2">
                              <div className="flex-1 bg-slate-200 rounded-full h-2 overflow-hidden">
                                <div
                                  className={`h-full ${getProgressColor(progress)} transition-all`}
                                  style={{ width: `${progress}%` }}
                                />
                              </div>
                              <span className="text-sm font-medium text-slate-700 min-w-[3rem]">
                                {Math.round(progress)}%
                              </span>
                            </div>
                          </td>
                          <td className="px-6 py-4 whitespace-nowrap text-right space-x-2">
                            <Button
                              size="sm"
                              variant="ghost"
                              onClick={() => handleEdit(indicator)}
                            >
                              <Edit2 className="w-4 h-4" />
                            </Button>
                            <Button
                              size="sm"
                              variant="ghost"
                              onClick={() => handleDelete(indicator.id)}
                            >
                              <Trash2 className="w-4 h-4 text-red-600" />
                            </Button>
                          </td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>
              </div>
            )}
          </CardBody>
        </Card>
      )}

      <Modal
        isOpen={isModalOpen}
        onClose={handleCloseModal}
        title={editingIndicator ? 'Göstergeyi Düzenle' : 'Yeni Performans Göstergesi'}
        size="lg"
      >
        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <label className="block text-sm font-medium text-slate-700 mb-2">
              Hedef *
            </label>
            <select
              value={formData.goal_id}
              onChange={(e) => setFormData({ ...formData, goal_id: e.target.value })}
              className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              required
            >
              <option value="">Seçiniz...</option>
              {goals.map((goal) => (
                <option key={goal.id} value={goal.id}>
                  {goal.code} - {goal.title}
                </option>
              ))}
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-slate-700 mb-2">
              Gösterge Adı *
            </label>
            <input
              type="text"
              value={formData.name}
              onChange={(e) => setFormData({ ...formData, name: e.target.value })}
              className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="örn: Park alanı sayısı"
              required
            />
          </div>

          <div className="grid grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-2">
                Birim *
              </label>
              <input
                type="text"
                value={formData.unit}
                onChange={(e) => setFormData({ ...formData, unit: e.target.value })}
                className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="adet, %, TL, m²"
                required
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-slate-700 mb-2">
                Ölçüm Sıklığı
              </label>
              <select
                value={formData.measurement_frequency}
                onChange={(e) => setFormData({ ...formData, measurement_frequency: e.target.value })}
                className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="monthly">Aylık</option>
                <option value="quarterly">3 Aylık</option>
                <option value="yearly">Yıllık</option>
              </select>
            </div>
          </div>

          <div className="grid grid-cols-3 gap-4">
            <div>
              <label className="block text-sm font-medium text-slate-700 mb-2">
                Başlangıç Değeri *
              </label>
              <input
                type="number"
                step="0.01"
                value={formData.baseline_value}
                onChange={(e) => setFormData({ ...formData, baseline_value: parseFloat(e.target.value) })}
                className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-slate-700 mb-2">
                Hedef Değer *
              </label>
              <input
                type="number"
                step="0.01"
                value={formData.target_value}
                onChange={(e) => setFormData({ ...formData, target_value: parseFloat(e.target.value) })}
                className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-slate-700 mb-2">
                Güncel Değer *
              </label>
              <input
                type="number"
                step="0.01"
                value={formData.current_value}
                onChange={(e) => setFormData({ ...formData, current_value: parseFloat(e.target.value) })}
                className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
            </div>
          </div>

          <div>
            <label className="block text-sm font-medium text-slate-700 mb-2">
              Hedef Yıl *
            </label>
            <input
              type="number"
              value={formData.target_year}
              onChange={(e) => setFormData({ ...formData, target_year: parseInt(e.target.value) })}
              className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              required
            />
          </div>

          <div className="flex justify-end space-x-3 pt-4">
            <Button type="button" variant="secondary" onClick={handleCloseModal}>
              İptal
            </Button>
            <Button type="submit" loading={submitting}>
              {editingIndicator ? 'Güncelle' : 'Kaydet'}
            </Button>
          </div>
        </form>
      </Modal>
    </div>
  );
}
